datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  DEVELOPER
  SUPERADMIN
  ADMIN
  STAFF
  PLAYER
}

enum GameType {
  PUBLIC
  PRIVATE
}

enum BookingStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED
}

enum PaymentType {
  ONLINE
  ON_SITE
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  PRO
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed
  firstName String?
  lastName  String?
  phone     String?
  avatar    String?
  bio       String?
  
  roles     Role[]   @default([PLAYER])

  // Relations
  ownedPitches Booking[] @relation("UserBookings")
  matches      GamePlayer[]
  
  managedPitches Pitch[] @relation("PitchOwner")
  
  sentMessages     Message[] @relation("SentMessages")
  receivedMessages Message[] @relation("ReceivedMessages")
  
  reviewsWritten   Review[]  @relation("WrittenReviews")
  reviewsReceived  Review[]  @relation("ReceivedReviews")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PitchStatus {
  PENDING
  APPROVED
  REJECTED
  HIDDEN
}

model Pitch {
  id          String   @id @default(uuid())
  name        String
  description String?
  address     String
  city        String
  latitude    Float?
  longitude   Float?
  
  sport       String   // e.g. "Football", "Tennis"
  pricePerHour Decimal
  currency    String   @default("EUR")
  
  photos      String[] // URLs
  facilities  String[] // e.g. "Showers", "Parking"
  
  // Rules & Settings
  status              PitchStatus @default(PENDING)
  autoApprove         Boolean  @default(false)
  cancellationHours   Int      @default(24) // Hours before booking to cancel
  acceptedPaymentTypes PaymentType[]
  
  ownerId     String
  owner       User     @relation("PitchOwner", fields: [ownerId], references: [id])
  
  bookings    Booking[]
  reviews     Review[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Booking {
  id        String        @id @default(uuid())
  pitchId   String
  pitch     Pitch         @relation(fields: [pitchId], references: [id])
  
  userId    String
  user      User          @relation("UserBookings", fields: [userId], references: [id])
  
  startTime DateTime
  endTime   DateTime
  
  status    BookingStatus @default(PENDING)
  
  // Payment
  totalPrice      Decimal
  commissionFee   Decimal       @default(0) // 5%
  paymentType     PaymentType   @default(ON_SITE)
  paymentStatus   PaymentStatus @default(PENDING)
  
  game      Game?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Game {
  id        String   @id @default(uuid())
  bookingId String   @unique 
  booking   Booking  @relation(fields: [bookingId], references: [id])
  
  type      GameType @default(PUBLIC)
  skillLevel SkillLevel?
  
  minPlayers Int?
  maxPlayers Int?
  
  players   GamePlayer[]
  messages  Message[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GamePlayer {
  id        String   @id @default(uuid())
  gameId    String
  game      Game     @relation(fields: [gameId], references: [id])
  
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  
  status    String   // JOINED, INVITED
  
  @@unique([gameId, userId])
}

model Message {
  id        String   @id @default(uuid())
  content   String
  
  senderId  String
  sender    User     @relation("SentMessages", fields: [senderId], references: [id])
  
  // Game chat
  gameId    String?
  game      Game?    @relation(fields: [gameId], references: [id])
  
  // 1:1 chat
  receiverId String?
  receiver   User?   @relation("ReceivedMessages", fields: [receiverId], references: [id])
  
  createdAt DateTime @default(now())
}

model Review {
  id        String   @id @default(uuid())
  rating    Int      // 1-5
  comment   String?
  
  authorId  String
  author    User     @relation("WrittenReviews", fields: [authorId], references: [id])
  
  // Target
  pitchId   String?
  pitch     Pitch?   @relation(fields: [pitchId], references: [id])
  
  targetUserId String?
  targetUser   User?   @relation("ReceivedReviews", fields: [targetUserId], references: [id])
  
  createdAt DateTime @default(now())
}
